{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*", "./cdk/**/*"],
  "exclude": [
    "/node_modules/",
    "build"
  ]
}
